<mui:ModernWindow x:Class="BotLeecherWPF.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    xmlns:my="clr-namespace:BotLeecherWPF"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    lex:LocalizeDictionary.IncludeInvariantCulture="True"
    lex:LocalizeDictionary.DesignCulture="en-US"
    lex:ResxLocalizationProvider.DefaultAssembly="BotLeecherWPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    Title="BotLeecher" Height="900" Width="1200">
    <mui:ModernWindow.Resources>
        <Style TargetType="mui:TransitioningContentControl">
            <Setter Property="Transition" Value="ModernUITransition" />
        </Style>
    </mui:ModernWindow.Resources>
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="BotLeecher">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Main" Source="/BotMain.xaml"  />
                <mui:Link DisplayName="Log" Source="/LogPanel.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>